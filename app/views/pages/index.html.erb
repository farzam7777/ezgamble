<% @top_sites = Site.all.order("rating desc").limit(3) %>

<!-- Hero Unit
  ================================================== -->
<div class="hero-unit">
  <div class="container hero-unit__container">
    <div class="hero-unit__content hero-unit__content--left-center">
      <span class="hero-unit__decor">
        <i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i>
      </span>
      <h5 class="hero-unit__subtitle">Elric Bros School</h5>
      <h1 class="hero-unit__title">The <span class="text-primary">Alchemists</span></h1>
      <div class="hero-unit__desc">Lorem ipsum dolor sit amet, consectetur adipisi nel elit, sed do eiusmod tempor incididunt ut labore et dolore .</div>
      
    </div>

    <figure class="hero-unit__img">
      <%= image_tag 'images/samples/header_player.png' %>
    </figure>
  </div>
</div>

<!-- Content
================================================== -->
<div class="site-content">
  <div class="container">

    <div class="row">
      <!-- Content -->
      <div class="content col-md-8">

        <!-- Lates News -->
        <div class="card card--clean">
          <header class="card__header card__header--has-btn">
            <h4>Top Rated Sites</h4>
            <a href="<%= sites_path %>" class="btn btn-default btn-outline btn-xs card-header__button">See All Sites</a>
          </header>
          <div class="card__content">
            <!-- Posts List -->
            <div class="posts posts--cards posts--cards-thumb-left post-list">
              
              <% @top_sites.each do |site| %>
                <div class="post-list__item">
                  <div class="posts__item posts__item--card posts__item--category-1 card">
                    <figure class="posts__thumb">
                      <a href="<%= site_path(site) %>"> <%= image_tag site.preview.url(:medium), style: 'height: 233px' %> </a>
                      <a href="#" class="posts__cta"></a>
                    </figure>
                    <div class="posts__inner">
                      <div class="card__content">
                        <div class="posts__cat">
                          <span class="label posts__cat-label"> <%= site.category.title %> </span>
                        </div>
                        <h6 class="posts__title"><a href="#"><%= site.title %></a></h6>
                        <time datetime="2016-08-17" class="posts__date"><%= time_ago_in_words(site.created_at) %></time>
                        <div class="posts__excerpt">
                          <%= truncate(site.description, length: 70) %>
                        </div>
                      </div>
                      <footer class="posts__footer card__footer">
                        <ul class="post__meta meta">
                          <li class="meta__item meta__item--comments"><a href="#"><%= site.reviews.count %></a></li>
                        </ul>
                      </footer>
                    </div>
                  </div>
                </div>
              <% end %>

            </div>
            <!-- Posts List / End -->
          </div>
        </div>
        <!-- Lates News / End -->


      </div>
      <!-- Content / End -->

