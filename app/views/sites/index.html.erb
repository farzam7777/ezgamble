<!-- Page Heading
================================================== -->
<div class="page-heading">
  <div class="container">
    <div class="row">
      <div class="col-md-10 col-md-offset-1">
        <h1 class="page-heading__title">Shop <span class="highlight">List</span></h1>
        <ol class="page-heading__breadcrumb breadcrumb">
          <li><a href="index.html">Home</a></li>
          <li class="active">Shop</li>
        </ol>
      </div>
    </div>
  </div>
</div>

<!-- Content
================================================== -->
<div class="site-content">
  <div class="container">

    <div class="row">

      <!-- Products -->
      <div class="col-md-9 col-md-push-3">

        <!-- Shop List -->
        <div class="card card--clean">
          <header class="card__header card__header--shop-filter">
            <div class="shop-filter">
              <h5 class="shop-filter__result">Showing 6 of 98 products</h5>
              <div class="shop-filter__layout"></div>
            </div>
          </header>
          
          <div class="card__content">

            <!-- Products -->
            <ul class="products products--list">
              <%= render @sites %>
            </ul>
            <!-- Products / End -->
          </div>
        </div>
        <!-- Shop List / End -->

        <div class="text-right">
          <!-- Shop Pagination -->
          <nav class="shop-pagination">
            <ul class="pagination">
              <li class="active"><a href="#">1</a></li>
              <li><a href="#">2</a></li>
              <li><a href="#">3</a></li>
              <li><span>...</span></li>
              <li><a href="#">16</a></li>
            </ul>
          </nav>
          <!-- Shop Pagination / End -->
          
        </div>

      </div>
      <!-- Products / End -->

      <!-- Sidebar -->
      <div class="sidebar sidebar--shop col-md-3 col-md-pull-9">

        <!-- Widget: Hot Products -->
        <aside class="widget card widget--sidebar widget-products">
          <div class="widget__title card__header">
            <h4>Hot Products</h4>
          </div>
          <div class="widget__content card__content">
            <ul class="products-list">
              <li class="products-list__item">
